{
  "manifest_version": 3,
  "name": "Focus Todo with Attention Tracking",
  "version": "1.0.0",
  "description": "Todo app with computer vision attention tracking and Muse S integration",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "bluetooth",
    "bluetoothPrivate",
    "notifications",
    "alarms",
    "action"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Todo"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "icons": {
    "128": "images/sprite_1.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["sprite_1.gif", "content.js", "images/*.png", "images/*.gif"],
      "matches": ["<all_urls>"]
    }
  ]
}
